<?xml version="1.0" encoding="utf-8"?>
<com.gaadi.pratnerapps.theme.DealerFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/layoutHeightWidthMatchStyling"
    android:id="@+id/frameLayoutImages"
    xmlns:tools="http://schemas.android.com/tools">

    <com.gaadi.pratnerapps.theme.DealerImageView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/imgAppBarView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:scaleType="centerCrop"
        android:transitionName="car"
        app:layout_collapseMode="parallax" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_gravity="bottom"
        android:background="@drawable/dropshadow"/>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        style="@style/layoutHeightWrapWidthMatchStyling.Padding"
        android:layout_gravity="bottom"
        android:id="@+id/layoutTitle"
        android:paddingLeft="@dimen/padding_large"

        android:visibility="gone"

        android:orientation="vertical"
        >

        <com.gaadi.pratnerapps.theme.DealerTextView
            android:id="@+id/tvTitle"
            style="@style/TextStyleNormal.Large18.Title"
            android:paddingBottom="0dp"
           />
        <com.gaadi.pratnerapps.theme.DealerTextView
            android:id="@+id/tvSubTitle"
            android:paddingTop="0dp"
            style="@style/TextStyleNormal.XLarge.Title"


            />

    </LinearLayout>

</com.gaadi.pratnerapps.theme.DealerFrameLayout>