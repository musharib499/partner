<?xml version="1.0" encoding="utf-8"?>
<com.gaadi.pratnerapps.theme.DealerLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/layoutHeightWrapWidthMatchStyling"
    android:orientation="vertical">



    <com.gaadi.pratnerapps.theme.DealerTextView
        style="@style/TextStyleNormal.Large18"
        android:id="@+id/tvMake"
        android:singleLine="true"
        android:paddingTop="@dimen/padding_small"
        android:paddingBottom="0dp"
        tools:text="" />


    <com.gaadi.pratnerapps.theme.DealerLinearLayout
        style="@style/layoutHeightWidthWrapStyling"
        android:gravity="center_vertical"
        android:layout_marginLeft="@dimen/margin_small"
        android:orientation="horizontal">

        <com.gaadi.pratnerapps.theme.DealerImageView
            style="@style/ImageViewWithTintColor.SubTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_place_small" />

        <com.gaadi.pratnerapps.theme.DealerTextView
            android:id="@+id/tvAddress"
            style="@style/TextStyleNormal"
            tools:text="" />
    </com.gaadi.pratnerapps.theme.DealerLinearLayout>

    <com.gaadi.pratnerapps.theme.DealerTextView
        android:id="@+id/tvYearKilFuel"
        style="@style/TextStyleNormal.Small"
        android:layout_gravity="center_vertical"
        tools:text="@string/year_kms_type" />

    <include
        layout="@layout/border_view_match_width"
        android:id="@+id/viewDivider"
        android:layout_width="match_parent"
        android:layout_marginRight="@dimen/margin_small"
        android:layout_marginTop="@dimen/margin_large"
        android:layout_marginBottom="@dimen/margin_small"
        android:layout_height=".01dp" />


    <com.gaadi.pratnerapps.theme.DealerLinearLayout
        android:id="@+id/layoutRequestCall"
        style="@style/layoutHeightWrapWidthMatchStyling"
        android:gravity="center_vertical"
        android:layout_marginRight="@dimen/margin_small">


        <com.gaadi.pratnerapps.theme.DealerTextView
            android:id="@+id/tvPrice"
            style="@style/TextStyleNormal.Large.Accent"
            android:layout_width="match_parent"
            android:textSize="@dimen/hintTextSize_12sp"
            android:layout_weight="1.5"
            android:layout_gravity="center"
            android:singleLine="true"
            tools:text="\u20b9 3.43 Lakh" />
        <com.gaadi.pratnerapps.theme.DealerLinearLayout
            style="@style/layoutHeightWrapWidthMatchStyling"
            android:layout_weight="1"
            android:orientation="horizontal">

            <com.gaadi.pratnerapps.theme.DealerImageView
                style="@style/ImageViewStyle"
                android:padding="0dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_call"/>

            <com.gaadi.pratnerapps.theme.DealerTextView
                android:id="@+id/tvRequest"
                style="@style/TextStyleNormal.Large.Accent"
                android:textSize="@dimen/hintTextSize_12sp"
                android:layout_width="match_parent"
                android:paddingLeft="0dp"
                android:layout_gravity="center"
                android:singleLine="true"
                android:text="@string/request_a_call" />

        </com.gaadi.pratnerapps.theme.DealerLinearLayout>


    </com.gaadi.pratnerapps.theme.DealerLinearLayout>


</com.gaadi.pratnerapps.theme.DealerLinearLayout>