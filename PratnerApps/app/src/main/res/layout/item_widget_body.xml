<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/padding_small"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content">

    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">

        <com.gaadi.pratnerapps.theme.DealerImageView
            android:layout_width="match_parent"
            android:id="@+id/imageView"
            android:scaleType="fitCenter"
            app:tint_color="icon_color"
            android:layout_gravity="center"
            android:layout_height="100dp" />

        <com.gaadi.pratnerapps.theme.DealerProgressBar
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/progressBar"
            app:tint_color="primary_color"
            android:layout_gravity="center"/>

    </FrameLayout>
    <com.gaadi.pratnerapps.theme.DealerTextView
        android:id="@+id/tvTitle"
        android:layout_width="match_parent"
        android:gravity="center_horizontal"
        android:paddingLeft="0dp"
        app:text_color="secondary_info_text"
        android:paddingTop="0dp"
        style="@style/TextStyleNormal" />

</LinearLayout>