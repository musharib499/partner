<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/recyclercard"
    style="@style/CardViewStyle"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    >

    <com.gaadi.pratnerapps.theme.DealerRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.gaadi.pratnerapps.theme.DealerTextView
            android:id="@+id/tvRecommendedHeading"
            style="@style/TextStyleNormal.Large.Bold.LargePadding"
            android:text="@string/recent_list_cars" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_recomended_cars"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvRecommendedHeading"
            android:layout_centerHorizontal="true" />

    </com.gaadi.pratnerapps.theme.DealerRelativeLayout>


</android.support.v7.widget.CardView>